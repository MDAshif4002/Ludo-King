@model IEnumerable<LudoKing.Models.paymenthistory>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_AdminLayout";
    ViewBag.title = "Dashboard | Payment Status";
}



<div class="container-fluid my-5">
    <h2 class="text-center mb-4">Payment History</h2>
    <div class="row">
        <div class="col-sm-12">
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Payment ID</th>
                            <th>User ID</th>
                            <th>Date & Time</th>
                            <th>Amount</th>
                            <th>Payment Status (Optional)</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sr = 1;
                        }
                        @foreach (var data in Model)
                        {
                            <tr>
                                <td>@sr</td>
                                <td>@data.paymentid</td>
                                <td>@data.userid</td>
                                <td>@data.date</td>
                                <td>@data.amount</td>
                                <td>@data.paymentstatus</td>
                                <td>
                                    <a class="btn btn-light rounded-circle text-danger" asp-action="DeletePaymentHistory" asp-route-id="@data.id"><span class="menu-icon fas fa-trash"></span></a>
                                    <a class="btn btn-light rounded-circle text-warning" asp-action="EditPaymentHistory" asp-route-id="@data.id"><span class="menu-icon fas fa-edit"></span></a>
                                </td>
                            </tr>
                            sr++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
