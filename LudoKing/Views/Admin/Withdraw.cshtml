@model IEnumerable<LudoKing.Models.withdraw>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout="_AdminLayout";
    ViewBag.title = "Dashboard | Withdraw";
}



<div class="container-fluid my-5">
    <h2 class="text-center mb-4">Withdraw</h2>
    <div class="row">
        <div class="col-sm-12">
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Bank</th>
                            <th>Account Holder</th>
                            <th>IFSC Code</th>
                            <th>Account Number</th>
                            <th>Amount</th>
                            <th>Screenshot</th>
                            <th>Date & Time</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sr = 1;
                        }
                        @foreach (var data in Model)
                        {
                            <tr>
                                <td>@sr</td>
                                <td>@data.bank</td>
                                <td>@data.accountholder</td>
                                <td>@data.ifsccode</td>
                                <td>@data.accountnumber</td>
                                <td>@data.amount</td>
                                <td><img src="~/withdraw/@data.screenshot" height="100px" alt="Alternate Text" /></td>
                                <td>@data.datetime</td>
                                <td>
                                    <a class="btn btn-light rounded-circle text-danger" asp-action="DeleteWithdraw" asp-route-id="@data.id"><span class="menu-icon fas fa-trash"></span></a>
                                    <a class="btn btn-light rounded-circle text-warning" asp-action="EditWithdraw" asp-route-id="@data.id"><span class="menu-icon fas fa-edit"></span></a>
                                </td>
                            </tr>
                            sr++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
